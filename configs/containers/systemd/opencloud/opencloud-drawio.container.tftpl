[Unit]
Description=OpenCloud Draw.io Extension Quadlet

[Container]
Image=docker.io/opencloudeu/web-extensions:draw-io-latest
AutoUpdate=registry
ContainerName=opencloud-drawio

User=1000:1000

Entrypoint=/bin/sh
Exec=-c "cp -R /usr/share/nginx/html/draw-io/ /apps"

Volume=opencloud-apps:/apps

Pod=opencloud.pod

[Service]
Type=oneshot
RemainAfterExit=yes
TimeoutStartSec=900

[Install]
WantedBy=multi-user.target default.target
