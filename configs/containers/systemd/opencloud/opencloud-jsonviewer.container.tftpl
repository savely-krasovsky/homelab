[Unit]
Description=OpenCloud JSON Viewer Extension Quadlet

[Container]
Image=docker.io/opencloudeu/web-extensions:json-viewer-latest
AutoUpdate=registry
ContainerName=opencloud-jsonviewer

User=1000:1000

Entrypoint=/bin/sh
Exec=-c "cp -R /usr/share/nginx/html/json-viewer/ /apps"

Volume=opencloud-apps:/apps

Pod=opencloud.pod

[Service]
Type=oneshot
RemainAfterExit=yes
TimeoutStartSec=900

[Install]
WantedBy=multi-user.target default.target
